{
    "compilerOptions": {
      "target": "es2024",                          
      "module": "commonjs",                     
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/",                       
      "declaration": true,
      "rootDir": "./src/",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib":["ES2024","dom"],                
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}